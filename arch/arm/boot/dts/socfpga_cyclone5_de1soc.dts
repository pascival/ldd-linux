#include "socfpga_cyclone5.dtsi"

/ {
	model = "Terasic DE1-SoC Development Kit";
	compatible = "altr,socfpga-cyclone5", "altr,socfpga";

	chosen {
		bootargs = "earlyprintk";
		stdout-path = "serial0:115200n8";
	};

	memory {
		name = "memory";
		device_type = "memory";
		reg = <0x0 0x40000000>; /* 1GB */
	};

	aliases {
		/* This allows the ethaddr uboot environment variable
		 * to be added to the gmac1 device tree blob
		 */
		ethernet0 = &gmac1;
	};

	leds {
		compatible = "gpio-leds";
		hps0 {
			label = "user_led";
			gpios = <&portb 24 0>;
		};
	};

	regulator_3_3v: 3-3-v-regulator {
		compatible = "regulator-fixed";
		regulator-name = "3.3V";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
	};

	soc {
		led0: led@ff203080 {
			compatible = "ldd,ledpwm","led0";
			reg = <0xff203080 0x1>;
		};

		led1: led@ff203084 {
			compatible = "ldd,ledpwm","led1";
			reg = <0xff203084 0x1>;
		};

		led2: led@ff203088 {
			compatible = "ldd,ledpwm","led2";
			reg = <0xff203088 0x1>;
		};

		led3: led@ff20308c {
			compatible = "ldd,ledpwm","led3";
			reg = <0xff20308c 0x1>;
		};

		led4: led@ff203090 {
			compatible = "ldd,ledpwm","led4";
			reg = <0xff203090 0x1>;
		};

		led5: led@ff203094 {
			compatible = "ldd,ledpwm","led5";
			reg = <0xff203094 0x1>;
		};

		led6: led@ff203098 {
			compatible = "ldd,ledpwm","led6";
			reg = <0xff203098 0x1>;
		};

		led7: led@ff20309c {
			compatible = "ldd,ledpwm","led7";
			reg = <0xff20309c 0x1>;
		};

		led8: led@ff2030a0 {
			compatible = "ldd,ledpwm","led8";
			reg = <0xff2030a0 0x1>;
		};

		led9: led@ff2030a4 {
			compatible = "ldd,ledpwm","led9";
			reg = <0xff2030a4 0x1>;
		};
	};

};

&gmac1 {
	status = "okay";
	phy-mode = "rgmii";

	rxd0-skew-ps = <0>;
	rxd1-skew-ps = <0>;
	rxd2-skew-ps = <0>;
	rxd3-skew-ps = <0>;
	txen-skew-ps = <0>;
	txc-skew-ps = <2600>;
	rxdv-skew-ps = <0>;
	rxc-skew-ps = <2000>;
};

&gpio1 {
	status = "okay";
};

&mmc0 {
	cd-gpios = <&portb 18 0>;
	vmmc-supply = <&regulator_3_3v>;
	vqmmc-supply = <&regulator_3_3v>;
	status = "okay";
};

&usb1 {
	status = "okay";
};
